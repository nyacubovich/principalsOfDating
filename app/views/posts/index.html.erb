<%= render "layouts/navbar" %>

<div class="container">
  <div class="jumbotron">
    <h1>Miss Wormwood's Hijinx</h1>
    <table class="fixed">
      <thead>
        <tr>
          <th width="75px">Date</th>
          <th>Title</th>
          <th colspan="5"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.created_at.strftime("%m-%d-%Y") %> --</td>
            <td><%= link_to post.title, post %> </td>
            <% if signed_in? %>
 
              <td>| <%= link_to 'Edit', edit_post_path(post) %> | </td>
              <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <% if signed_in? %>
      <%= link_to 'New Post', new_post_path %>
    <% end %>
  </div>
</div>